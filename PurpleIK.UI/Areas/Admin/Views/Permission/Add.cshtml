@using PurpleIK.UI.Areas.Admin.Models.VM.PermissionVM;
@model AddPermissionVM

@{
    ViewData["Title"] = "Add";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="font-weight: bold; color: #9a55ff ;font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;font-size: 28px;position: center;" class="card-title" align="center">İzin Tanımlama Sayfası</h4>
            <hr />
            <form asp-action="Add" asp-asp-controller="Admin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PermissionType" class="control-label">İzin Tipi</label>
                    <input asp-for="PermissionType" class="form-control" />
                    <span asp-validation-for="PermissionType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ekle" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

