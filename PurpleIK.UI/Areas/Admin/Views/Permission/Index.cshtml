@using PurpleIK.UI.Areas.Admin.Models.VM.PermissionVM;
@model IndexPermissionVM

@{
    ViewData["Title"] = "Index";
 
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="font-weight: bold; color: #9a55ff ;font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;font-size: 28px;position: center;" class="card-title" align="center">Tanımlanan İzinler Tablosu</h4>
            <hr />
            <p class="card-description" align="right">
                <a asp-action="Add" class="btn-block btn-lg btn-gradient-primary mt-4">İzin Ekle</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            İzin Tipi
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model.Permissions) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PermissionType)
                        </td>
                        <td>
                                @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                                @Html.ActionLink("Sil", "Remove", new { id = item.Id }, new {@class="btn btn-danger"})
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>