@model IEnumerable<PurpleIK.UI.Areas.Admin.Models.VM.AdminVM.CompanyListVM>


@{
    ViewData["Title"] = "Aktif Şirketler";
    // Layout = "~/Areas/Admin/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="font-weight: bold; color: #9a55ff ;font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;font-size: 28px;position: center;" class="card-title" align="center">Aktif Şirketler Tablosu</h4>
            <hr />
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Şirket Adı</th>
                        <th>Email</th>
                        <th>Çalışan Sayısı</th>                
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CompanyName</td>
                            <td>@item.Email</td>
                            <td>@item.NumberOfEmployee</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                            <a asp-action="CompanyEdit" asp-route-id="@item.CompanyId" class="btn btn-sm btn-gradient-dark btn-icon-text"> <i class="mdi mdi-tooltip-edit btn-icon-prepend"></i>Düzenle</a>
                                 </div>
                            </td>                    
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

