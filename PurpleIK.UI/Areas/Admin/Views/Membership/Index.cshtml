@model IEnumerable<PurpleIK.UI.Areas.Admin.Models.VM.MembershipVM.MembershipIndexVM>

@{
    ViewData["Title"] = "Index";    
}

<h4 style="font-weight: bold; color: #9a55ff ;font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;font-size: 28px;position: center;" class="card-title" align="center">Üyelik Listesi</h4>
<hr />

<p class="card-description" align="right">
    <a asp-action="AddMembership" class="btn btn-primary">Yeni Üyeklik Ekle</a>
</p>
<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Üyelik Adı</th>
                    <th>Üyelik Süresi</th>
                    <th>Üyelik Fiyatı</th>
                    <th>Açıklaması</th>
                    <th>Çalışan Sayısı</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.SubscriptionPeriod</td>
                        <td>@item.Price</td>
                        <td>@item.Description</td>
                        <td>@item.NumberOfEmployee</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a asp-action="EditMembership" asp-route-id="@item.Id" class="btn btn-sm btn-gradient-dark btn-icon-text"><i class="mdi mdi-file-check btn-icon-prepend"></i>Düzenle</a>
                                <a asp-action="RemoveMembership" asp-route-id="@item.Id" class="btn btn-sm btn-gradient-danger btn-icon-text"><i class="mdi mdi-delete-forever btn-icon-prepend"></i>Sil</a>
                                
                            </div>
                        </td>
                      
                    </tr>
                }
            </tbody>
        </table>