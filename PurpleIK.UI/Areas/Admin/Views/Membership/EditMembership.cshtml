@model PurpleIK.UI.Areas.Admin.Models.VM.MembershipVM.MembershipEditVM

@{
    ViewData["Title"] = "EditMembership";
}



<h4>Üyelik Düzenleme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMembership">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name">Üyelik Adı </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubscriptionPeriod">Üyelik Tipi</label>
                <input asp-for="SubscriptionPeriod" class="form-control" />
                <span asp-validation-for="SubscriptionPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Fiyat</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Açıklama</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfEmployee">Maksimum Çalışan Sayısı</label>
                <input asp-for="NumberOfEmployee" class="form-control" />
                <span asp-validation-for="NumberOfEmployee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-block btn-lg btn-gradient-primary mt-4" />
            </div>
            <div        
    </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-block btn-lg btn-gradient-primary mt-4"  asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
