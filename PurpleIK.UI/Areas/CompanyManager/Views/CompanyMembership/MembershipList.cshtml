@model IEnumerable<PurpleIK.UI.Areas.CompanyManager.Models.VM.CompanyMembershipVM.MembershipListVM>

@{
    ViewData["Title"] = " MembershipList";
    Layout = "~/Views/Shared/_CompanyLayoutMembership.cshtml";
}
@{
    // TempData'den SuccessMessage veya ErrorMessage anahtarlarını al    
    var errorMessage = TempData["MembershipErrorMessage"] as string;
     
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div id="errorAlert" class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}

<div class="row">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Üyelik Adı</th>
                    <th>Üyelik Fiyatı</th>
                    <th>Üyelik Süresi</th>
                    <th>Çalışan Sayısı</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.SubscriptionPeriod</td>
                        <td>@item.NumberOfEmployee</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a asp-action="Membership" asp-route-id="@item.PlanId" class="btn btn-sm btn-primary">Seç</a>
                            </div>
                        </td>

                    </tr>
                }
                
            </tbody>
        </table>
       
    </div>
</div>

@section Scripts {
    <script>
     
        // Remove error message after 5 seconds
        setTimeout(function () {
            $('#errorAlert').fadeOut('slow');
        }, 3000);
    </script>
}