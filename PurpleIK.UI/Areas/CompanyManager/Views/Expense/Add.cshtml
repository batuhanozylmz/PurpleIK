@using PurpleIK.UI.Areas.CompanyManager.Models.VM.ExpenseVM;
@model ExpenseAddVM

@{
    ViewData["Title"] = "Add";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="font-weight: bold; color: #9a55ff ;font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;font-size: 28px;position: center;" class="card-title" align="center">Harcama Ekleme Sayfası</h4>
            <hr />
            <div class="table-responsive">
                <table class="table table-striped">
                    <form class="forms-sample" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ExpenseAddItem.PersonId">Personel</label>
                            @if (Model != null && Model.Persons != null && Model.Persons.Any())
                            {
                                <select asp-for="ExpenseAddItem.PersonId" class="form-control" required>
                                    <option value="">Çalışan Seç</option>
                                    @foreach (var person in Model.Persons)
                                    {
                                        <option value="@person.Id">@person.FirstName @person.LastName - @person.CompanyEmail</option>
                                    }
                                </select>
                            }
                            else
                            {
                                <span class="text-danger">Çalışan bulunamadı.</span>
                            }
                            <span asp-validation-for="ExpenseAddItem.PersonId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpenseAddItem.Name">Harcama Adı</label>
                            <input asp-for=ExpenseAddItem.Name class="form-control" required />
                            <span asp-validation-for="ExpenseAddItem.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpenseAddItem.Description">Açıklama</label>
                            <input asp-for=ExpenseAddItem.Description class="form-control" required />
                            <span asp-validation-for="ExpenseAddItem.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpenseAddItem.Price">Harcama Tutarı</label>
                            <input asp-for=ExpenseAddItem.Price class="form-control" required />
                            <span asp-validation-for="ExpenseAddItem.Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpenseAddItem.ExpenseDate">Harcama Teslim Tarihi</label>
                            <input asp-for="ExpenseAddItem.ExpenseDate" class="form-control" type="date" required />
                            <span asp-validation-for="ExpenseAddItem.ExpenseDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpenseAddItem.ExpenseFormFile">PDF Dosyası Yükle</label>
                            <input asp-for="ExpenseAddItem.ExpenseFormFile" class="form-control" type="file" />
                        </div>
                        <input type="hidden" asp-for="ExpenseAddItem.PersonId" />

                        <div class="form-group">
                            <button type="submit" class="btn btn-gradient-primary btn-icon-text">
                                <i class="mdi mdi-file-check btn-icon-prepend"></i>Harcama Ekle
                            </button>

                        </div>
                    </form>
                </table>
            </div>
        </div>
    </div>
</div>
