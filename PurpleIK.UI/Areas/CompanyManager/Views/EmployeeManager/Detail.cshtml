@using PurpleIK.UI.Areas.CompanyManager.Models.VM.EmployeeManagerVM
@model EmployeeListVM

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 style="font-weight: bold; color: #9a55ff ;font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;font-size: 28px;position: center;" class="card-title" align="center">Çalışan Detay Sayfası</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.Picture))
                            {
                                <img src="@Model.Picture" alt="Profile Picture" style="max-width: 200px; max-height: 200px;" />
                            }
                          </div>
                        <div class="col-md-4">
                            <p><strong>Ad Soyad:</strong> @Model.FirstName @Model.LastName</p>
                            <p><strong>Doğum Tarihi:</strong> @Model.BirthDate</p>
                            <p><strong>Doğum Yeri:</strong> @Model.BirhtPlace</p>
                            <p><strong>Kimli No:</strong> @Model.CitizenId</p>
                            <p><strong>Tel No:</strong> @Model.PersonalPhoneNumber</p>
                        </div>
                        <div class="col-md-4">      
                            <p><strong>Company Name:</strong> @Model.CompanyName</p>
                            <p><strong>İşe Baş. Tar:</strong> @Model.StartDate</p>
                            <p><strong>Kişisel Mail:</strong> @Model.PersonalEmail</p>
                            <p><strong>Adres:</strong> @Model.Address</p>
                            <p><strong>Departman:</strong> @Model.Department</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
