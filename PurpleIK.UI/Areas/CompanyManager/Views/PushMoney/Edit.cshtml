@model PurpleIK.UI.Areas.CompanyManager.Models.VM.PushMoneyVM.PushMoneyEditVM

@{
    ViewData["Title"] = "Edit";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="font-weight: bold; color: #9a55ff ;font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;font-size: 28px;position: center;" class="card-title" align="center">Primler Düzenleme Sayfası</h4>
            <hr />
             <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PushMoneyEditItem.Id" />
            <div class="form-group">
                <label asp-for="PushMoneyEditItem.Type">Prim Tipi</label>
                <input asp-for=PushMoneyEditItem.Type class="form-control" />
                <span asp-validation-for="PushMoneyEditItem.Type" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="PushMoneyEditItem.Amount">Prim Miktarı</label>
                <input asp-for=PushMoneyEditItem.Amount class="form-control" />
                <span asp-validation-for="PushMoneyEditItem.Amount" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="PushMoneyEditItem.CurrencyUnit">Para Birimi</label>
                <input asp-for=PushMoneyEditItem.CurrencyUnit class="form-control" />
                <span asp-validation-for="PushMoneyEditItem.CurrencyUnit" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="PushMoneyEditItem.Description">Açıklama</label>
                <input asp-for=PushMoneyEditItem.Description class="form-control" />
                <span asp-validation-for="PushMoneyEditItem.Description" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="PushMoneyEditItem.PersonId">Personel</label>
                @if (Model != null && Model.Persons != null && Model.Persons.Any())
                {
                    <select asp-for="PushMoneyEditItem.PersonId" class="form-control">
                        <option value="">Çalışan Seç</option>
                        @foreach (var person in Model.Persons)
                        {
                            <option value="@person.Id">@person.FirstName @person.LastName - @person.CompanyEmail</option>
                        }
                    </select>
                }
                else
                {
                    <span class="text-danger">Çalışan bulunamadı.</span>
                }
                <span asp-validation-for="PushMoneyEditItem.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-gradient-primary btn-icon-text"><i class="mdi mdi-file-check btn-icon-prepend"></i>Kaydet</button>
            </div>
        </form>
        </div>
    </div>
</div>
