@using PurpleIK.UI.Areas.Employee.Models.VM.ExpenseEmployeeVM

@{
    ViewData["Title"] = "Detail";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="font-weight: bold; color: #9a55ff ;font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;font-size: 28px;position: center;" class="card-title" align="center">Harcama Detay Sayfası</h4>
            <hr />
            @if (Model.ExpenseEmployeeItems != null && Model.ExpenseEmployeeItems.Count > 0)
            {
                foreach (var expense in Model.ExpenseEmployeeItems)
                {
                    <h4>Name: @expense.ProductName</h4>
                    <p>Expense Date: @expense.ExpenseDate</p>
                    <p>Created Date: @(expense.CreatedDate.HasValue ? expense.CreatedDate.Value.ToShortDateString() : "-")</p>

                    @if (expense.ExpenseForm != null && expense.ExpenseForm.Length > 0)
                    {
                        <img src="data:image;base64,@(Convert.ToBase64String(expense.ExpenseForm))" alt="expense Form" class="img-fluid" />
                    }
                    else
                    {
                        <p>No expense form available.</p>
                    }
                }
            }
            else
            {
                <p>No details available.</p>
            }
        </div>
    </div>
</div>