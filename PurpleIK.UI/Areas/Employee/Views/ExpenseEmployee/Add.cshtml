@using PurpleIK.UI.Areas.Employee.Models.VM.ExpenseEmployeeVM;
@model ExpenseEmployeeAddVM

@{
    ViewData["Title"] = "Add";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="font-weight: bold; color: #9a55ff ;font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;font-size: 28px;position: center;" class="card-title" align="center">Harcama Ekleme Sayfası</h4>
            <hr />
            <div class="table-responsive">
                <table class="table table-striped">
                    <form class="forms-sample" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ExpenseEmployeeAddItem.Name">Harcama Adı</label>
                            <input asp-for=ExpenseEmployeeAddItem.Name class="form-control" required />
                            <span asp-validation-for="ExpenseEmployeeAddItem.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpenseEmployeeAddItem.Description">Açıklama</label>
                            <input asp-for=ExpenseEmployeeAddItem.Description class="form-control" required />
                            <span asp-validation-for="ExpenseEmployeeAddItem.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpenseEmployeeAddItem.Price">Harcama Tutarı</label>
                            <input asp-for=ExpenseEmployeeAddItem.Price class="form-control" required />
                            <span asp-validation-for="ExpenseEmployeeAddItem.Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpenseEmployeeAddItem.ExpenseDate">Harcama Teslim Tarihi</label>
                            <input asp-for="ExpenseEmployeeAddItem.ExpenseDate" class="form-control" type="date" required />
                            <span asp-validation-for="ExpenseEmployeeAddItem.ExpenseDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpenseEmployeeAddItem.ExpenseFormFile">PDF Dosyası Yükle</label>
                            <input asp-for="ExpenseEmployeeAddItem.ExpenseFormFile" class="form-control" type="file" />
                        </div>
                        <input type="hidden" asp-for="ExpenseEmployeeAddItem.PersonId" />

                        <div class="form-group">
                            <button type="submit" class="btn btn-gradient-primary btn-icon-text">
                                <i class="mdi mdi-file-check btn-icon-prepend"></i>Harcama Ekle
                            </button>

                        </div>
                    </form>
                </table>
            </div>
        </div>
    </div>
</div>
