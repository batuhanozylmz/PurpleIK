@using PurpleIK.UI.Models.VM.CommentVM
@model List<CommentListVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<!-- Header Start -->
<div class="container-fluid testimonial py-5">
    <div class="container text-center py-5">
        <h3 class="text-white display-3 mb-4">Kullanıcı Hikayeleri</h3>  
    </div>
</div>
<!-- Header End -->
<!-- Team Start -->
<div class="container-fluid team py-5">
    <div class="container py-5">
        <div class="text-center mx-auto mb-5" style="max-width: 800px;">
            <p class="fs-4 text-uppercase text-primary">KULLANICI HIKAYELERI</p>
            <h1 class="display-4 mb-4">Müşteriler Ne diyor!</h1>
        </div>
        <div class="row g-4">
            @foreach (var comment in Model)
            {
                @if (comment.Status == PurpleIK.Core.Enums.Status.Active)
                {
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="team-item">
                            <a href="@Url.Action("Detail", "Comment", new { id = comment.Id })">
                                <div class="team-img rounded-top" style="height: 300px; overflow: hidden;">
                                    <img src="@comment.Picture" class="img-fluid w-100 rounded-top bg-light" alt="" style="height: 100%; object-fit: cover;">
                                </div>

                                <div class="team-text rounded-bottom text-center p-4">
                                    <h3 class="text-white">@comment.CompanyManagerName</h3>
                                    <p class="mb-0 text-white">@comment.CompanyName</p>
                                </div>

                            @* <div class="team-social">
                                <a class="btn btn-light btn-light-outline-0 btn-square rounded-circle mb-2 team-detail-link" href="@Url.Action("Detail", "Comment", new { id = comment.Id })">İ</a>
                            </div> *@
                            </a>
                        </div>
                    </div>
                }
            }   
        </div>
    </div>
</div>
<!-- Team End -->